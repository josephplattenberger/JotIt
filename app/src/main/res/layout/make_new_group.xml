<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_group_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <EditText
        android:id="@+id/newGroupEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/group_name_hint"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:maxLength="140">

        <requestFocus />
    </EditText>
    
    <Button
        android:id="@+id/newGroupAcceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/newGroupSpinner"
        android:text="@string/ok"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/ok_button_color"/>

    <Spinner
        android:id="@+id/newGroupSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newGroupEditText"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
	    android:layout_marginStart="24dp"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>
</ScrollView>