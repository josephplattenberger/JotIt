<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/change_app_theme_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <Spinner
        android:id="@+id/appThemeSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="24dp" />

    <Button
        android:id="@+id/appThemeAcceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_below="@+id/appThemeSpinner"
        android:layout_alignParentEnd="true"
        android:text="@string/ok"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/ok_button_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_toStartOf="@+id/appThemeAcceptButton"
        android:layout_below="@+id/appThemeSpinner"
        android:layout_marginBottom="8dp"/>

</RelativeLayout>